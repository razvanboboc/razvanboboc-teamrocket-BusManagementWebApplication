@model BusCompanyManagementApplication.Models.AnnouncementModel.AnnouncementViewModel
@{
    ViewData["Title"] = "Home Page";
}<style>
    .tableFixHead {
        overflow-y: auto;
        height: 100px;
    }

        .tableFixHead thead th {
            position: sticky;
            top: 0;
        }

    /* Just common table stuff. Really. */
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px 16px;
    }

    th {
        background: #eee;
    }

    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 35%;
    }
</style>
<img src="~/Images/logo.png" alt="Sample Photo" class="center" />
<a href='@Url.Action("AddAnnouncement", "Home")'>Add Announcement</a><br />
<div class="c">
    <table class="tableFixHead" border="1">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Title")
                </th>

                <th>
                    @Html.DisplayName("Posted Time")
                </th>
                <th>
                    @Html.DisplayName("Content")
                </th>

            </tr>
        </thead>
        <tbody>
            @if (Model.Announcements.Count() == 0)
            {
                <tr>
                    <td colspan="4">
                        No news available at the moment
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model.Announcements)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Title)
                        </td>                       
                        <td>
                            @Html.DisplayFor(model => item.AddedTime)
                        </td>
                        <td>                               
                            <a asp-action="ViewAnnouncement" asp-route-id="@item.AnnouncementId" asp-controller="Home">View</a>
                        </td>                            
                    </tr>
                }
            }
        </tbody>
    </table>

</div>
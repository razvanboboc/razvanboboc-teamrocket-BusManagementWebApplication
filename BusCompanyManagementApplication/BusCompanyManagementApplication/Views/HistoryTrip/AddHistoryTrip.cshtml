@using BusCompanyManagementApplication.Models.HistoryTrip
@model AddTripInHistoryViewModel;
@{
    ViewData["Title"] = "AddHistoryTrip";
}

<h1>Add History Trip</h1>

<form asp-action="AddTripInHistory" method="post">
    <input type="hidden" asp-for="TripId" />
    <div class="row">

        <div class="col-2">
            Status
        </div>

        <div class="col-10">
            <input class="form-control" type="text" asp-for="Status" />
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Ticket Price
        </div>
        <div class="col-10">
            <textarea class="form-control"
                      asp-for="TicketPrice">
    
            </textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-10"></div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>